---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
  <header class="flex flex-col items-center mt-8">
    <h1 class="text-2xl text-purple-600">{frontmatter.title}</h1>
    <h2 class="text-gray-400">{frontmatter.author} - {new Date(frontmatter.pubDate).toLocaleDateString()}</h2>
    <div class="flex flex-row gap-2">
      {frontmatter.tags.map((tag: string) => (
        <span class="bg-gray-400 leading-none p-1.5 text-sm">{tag}</span>
      ))}
    </div>
  </header>
  <hr class="m-10 border-purple-500">
  <article class="prose prose-invert prose-a:text-blue-600 prose-p:text-justify prose-img:rounded-xl max-w-3xl mx-auto px-4">
    <slot />
  </article>
</BaseLayout>
